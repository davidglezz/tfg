{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "es5",
      "es6",
      "es2015"
    ],
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "stripInternal": true,
    "inlineSources": false,
    "sourceMap": false,
    "types": ["node"]
  },
  "exclude": [
    "./node_modules/**",
    "./dist",
    "build"
  ]
}
